  width: 100%;
  height: 55px;
  box-sizing: border-box;
  padding-top: 15px;
  font-size: 16px;
  display: flex;
}
.section__title{
  width: 90%;
  margin: 0 auto;
  border-radius: 6px;
  background-color:#FFF; 
  height: 40px;
