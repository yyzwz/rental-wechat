  background-size: 26px 26px;
  background-position: 10px 7px;
}
.section input{
  width: 90%;
  margin: 0 auto;
  border-radius: 6px;
  background-color:#FFF; 
  height: 40px;
  box-sizing: border-box;
  /* padding-left: 45px; */
  background-repeat: no-repeat;
  background-size: 26px 26px;
  background-position: 10px 7px;
}
